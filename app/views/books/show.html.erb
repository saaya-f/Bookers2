<h2>New book</h2>
<%= form_with model: @book, url:'/books', local:true do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= @book.errors.count %>error prohibited this obj from being saved:</h2>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <label for="book_title">Title</label>
    <p><%= f.text_field :title %></p>
  </div>
  <div class="field">
    <label for="book_body">Opinion</label>
    <p><%= f.text_area :body %></p>
  </div>
  <hr>
  <%= f.submit "Create Book" %>
<% end %>

<h2>Book detail</h2>
<table>
  <tbody>
    <tr>
      <td>
        <%= @book.user_id %>
      </td>
      <td>
        <%= @book.title %>
      </td>
      <td>
        <%= @book.body %>
      </td>
      <td>
        <% if @book.user == current_user %>
          <%= link_to "Edit", edit_book_path %>
        <% end %>
      </td>
      <td>
        <% if @book.user == current_user %>
          <%= link_to "Destroy", book_path, method: :delete, "data-confirm" => "本当に消しますか？" %>
        <% end %>
      </td>
    </tr>
  </tbody>
</table>