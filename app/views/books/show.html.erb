<div class="body">
  <div class="container">
    <p id="notice"><%= notice %></p>
    <div class="row">
      <div class="col-xs-3">
        <h2>User info</h2>
        <%= render 'users/profile', user: @book.user %>

        <h2>New book</h2>
        <%= render 'books/form', book: @book_new %>
      </div>

      <div class="col-xs-9">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@book.user_id) do %>
                <%= attachment_image_tag @book.user, :profile_image, size: '50x50', format: 'jpeg', fallback: "no_image.jpg" %>
                <p><%= @book.user.name %></p>
                <% end %>
              </td>
              <td>
                <%= @book.title %>
              </td>
              <td>
                <%= @book.body %>
              </td>
              <% if @book.favorited_by?(current_user) %>
              <script src="https://kit.fontawesome.com/7cacd7c5e5.js" crossorigin="anonymous"></script>
              <td>
                <%= link_to book_favorites_path(@book), method: :delete do %>
                  <i class="fa fa-heart" aria-hidden="true" style="color: gray;"></i>
                  <%= @book.favorites.count %>
                <% end %>
              </td>
              <%else %>
              <td>
                <%= link_to book_favorites_path(@book), method: :post do %>
                  <i class="fa fa-heart-o" aria-hidden="true"></i>
                  <%= @book.favorites.count %>
                <% end %>
              </td>
              <% end %>
              <td>
                <p>コメント数：<%= @book.book_comments.count %></p>
              </td>
              <td>
                <% if @book.user == current_user %>
                <%= link_to "Edit", edit_book_path, class:"btn-sm btn-success" %>
                <% end %>
              </td>
              <td>
                <% if @book.user == current_user %>
                <%= link_to "Destroy", book_path, method: :delete, "data-confirm" => "本当に消しますか？", class:"btn-sm btn-danger" %>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
        <table>
          <tbody>
          <% @book.book_comments.each do |book_comment| %>
            <div class="row">
              <tr>
                <td>
                  <%= attachment_image_tag(book_comment.user, :profile_image, size: '50x50', format: 'jpeg', fallback: "no_image.jpg") %>
                  <p><%= book_comment.user.name %></p>
                </td>
                <td>
                  <%= book_comment.comment %>
                </td>
                <td>
                  <% if book_comment.user == current_user %>
                    <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, "data-confirm" => "本当に消しますか？", class:"btn-sm btn-danger" %>
                  <% end %>
                </td>
              </tr>
            </div>
          <% end %>
          </tbody>
          <tbody>
            <%= form_with(model:[@book, @book_comment],local: true) do |f|%>
              <div class="row">
                <div class="col-sm-12">
                  <%= f.text_area :comment,rouws: '5', class: "form-control" %>
                </div>
              </div>
              <%= f.submit "送信", class:"pull-right" %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>





