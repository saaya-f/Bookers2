<h2>User info</h2>
<%= attachment_image_tag @user, :profile_image, size: '100x100', format: 'jpeg', fallback: "no_image.jpg" %>
<table class="table">
  <tbody>
    <tr></tr>
    <tr>
      <th>name</th>
      <th><%= @user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
    </tr>
  </tbody>
</table>
<div>
  <% if @user.id == current_user.id %>
    <p><%= link_to "edit", edit_user_path(@user) %></p>
  <% end %>
</div>

<h2>New book</h2>
<%= form_with model: @book, url:'/books', local:true do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= @book.errors.count %>error prohibited this obj from being saved:</h2>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <label for="book_title">Title</label>
    <p><%= f.text_field :title %></p>
  </div>
  <div class="field">
    <label for="book_body">Opinion</label>
    <p><%= f.text_area :body %></p>
  </div>
  <hr>
  <%= f.submit "Create Book" %>
<% end %>

<h2>Users</h2>
<table>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td>
        <%= attachment_image_tag user, :profile_image, size: '100x100', format: 'jpeg', fallback: "no_image.jpg" %>
      </td>
      <td>
         <%= user.name %>
      </td>
      <td>
        <% if @user.id == current_user.id %>
          <%= link_to "Show", user_path(user.id) %>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

